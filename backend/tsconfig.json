{
  "compilerOptions": {

    "allowJs": true, // 允许使用js
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ]
}
